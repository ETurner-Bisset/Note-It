<script>
    function addOneItem() {
        const items = document.getElementsByClassName("mb-3")
        const newNote = document.querySelector(".items");
        const newItem = document.createElement("div");
        for (let i = 5; i < items.length ; i++) {
            newItem.classList.add("mb-3");
            newItem.classList.add("list-item");
            newItem.innerHTML = `
            <label for="item${i}">${i}.</label>
            <input type="text" name="item" id="item${i}" class="item" >
            <p class="hidden"></p>
        `;
        };
        newNote.appendChild(newItem);
    };
</script>
